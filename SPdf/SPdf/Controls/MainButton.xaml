<UserControl x:Class="SPdf.Controls.MainButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SPdf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Fill="#000000" Grid.Row="0">
                <Path.Data>
                    <PathGeometry Figures="M6,6 L9,18 L6,30 L18,27 L30,30 L27,18 L30,6 L18,9 L6,6 Z M3,3 L18,6.75 L33,3 L29.25,18 L33,33 L18,29.25 L3,33 L6.75,18 L3,3 Z" FillRule="NonZero"/>
                </Path.Data>
            </Path>
            <TextBlock Text= "Title" Grid.Row="1"/>
            <TextBlock Text= "Description" Grid.Row="2"/>
        </Grid>
    </Border>
</UserControl>
